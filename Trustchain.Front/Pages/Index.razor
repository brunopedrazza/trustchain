@page "/"

<h3>Contracts</h3>

@if (Contracts is null)
{
    <p>
        <em>Loading...</em>
    </p>
}
else
{
    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Owner Representative</th>
            <th>Owner Company</th>
            <th>Hired Representative</th>
            <th>Hired Company</th>
            <th>Value</th>
            <th>Conclusion Date</th>
            <th>Job Done</th>
            <th>Job Approved</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
            <Virtualize Context="contract" Items="@Contracts">
                <tr>
                    <td>@contract.Id</td>
                    <td>@contract.Owner</td>
                    <td>@contract.OwnerCompany</td>
                    <td>@contract.Hired</td>
                    <td>@contract.HiredCompany</td>
                    <td>@contract.Value</td>
                    <td>@contract.ConclusionDate</td>
                    <td><input type="checkbox" checked="@contract.JobDone" disabled /></td>
                    <td><input type="checkbox" checked="@contract.JobApproved" disabled /></td>
                    <button class="btn btn-primary"
                            @onclick="@(() => EditContract(contract.Id))">
                        Edit
                    </button>
                </tr>
            </Virtualize>
        </tbody>
    </table>
}
